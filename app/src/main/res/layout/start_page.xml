<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="Tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:id="@+id/tut"
        android:onClick="tutorial"
        android:layout_below="@+id/loadlist"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Configure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/config"
        android:layout_below="@+id/loadlist"
        android:layout_centerHorizontal="true"
        android:onClick="configure"/>

    <Button
        android:text="Show Nodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nodelist"
        android:onClick="showlist"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <Button
        android:text="Load Configuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadlist"

        android:onClick="loadlist"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/nodelist"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/intervaldisp"
        android:layout_alignTop="@+id/tut"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="38dp"
        android:id="@+id/disp1"
        android:layout_below="@+id/intervaldisp"
        android:layout_toLeftOf="@+id/loadlist"
        android:layout_toStartOf="@+id/loadlist" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:id="@+id/updateintervalbx"
        android:layout_alignBaseline="@+id/disp1"
        android:layout_alignBottom="@+id/disp1"
        android:layout_toRightOf="@+id/disp1"
        android:layout_toEndOf="@+id/disp1"
        android:hint="Seconds" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView2"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updatebtn2"
        android:onClick="update2fxn"
        android:layout_below="@+id/updateintervalbx"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp" />
</RelativeLayout>